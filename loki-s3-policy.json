{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "LokiS3Access",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:::demo-looki-save-data",
                "arn:aws:s3:::demo-looki-save-data/*"
            ]
        },
        {
            "Sid": "LokiS3Encryption",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt",
                "kms:Encrypt",
                "kms:GenerateDataKey"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "kms:ViaService": "s3.amazonaws.com"
                }
            }
        }
    ]
}